
-const colors = require('@axa-fr/react-toolkit-core/src/common/scss/colorsList.js');
section
  h2.af-title Palette principale
  each linecolor, index in colors.primary
    ul.colors-list
      each itemcolor, index in linecolor
        li.colors-list__item
          span.colors-list__item-demo(style=`background:${itemcolor.hex};`)
          span.colors-list__item-name $#{itemcolor.name}
          span.colors-list__item-hexa #{itemcolor.hex}
          span.colors-list__item-title #{itemcolor.title}
