.af-form__group.row
  .col-md-2
    label.af-form__group-label Custom checkboxs *
  .col-md-10
    .af-form__checkbox-custom
      input.af-form__input-checkbox#checkbox1(name="checkboxname" type="checkbox")
      label.af-form__label(for="checkbox1")
        span.af-form__indicator
          i.glyphicon.glyphicon-ok
        span.af-form__description Option 1
    .af-form__checkbox-custom
      input.af-form__input-checkbox#checkbox2(name="checkboxname" type="checkbox")
      label.af-form__label(for="checkbox2")
        span.af-form__indicator
          i.glyphicon.glyphicon-ok
        span.af-form__description Option 2
    .af-form__checkbox-custom.af-form__checkbox-custom--disabled
      input.af-form__input-checkbox#checkboxx(name="checkboxname" type="checkbox" disabled)
      label.af-form__label(for="checkboxx")
        span.af-form__indicator
          i.glyphicon.glyphicon-ok
        span.af-form__description Disabled state
